<%- include('../partials/header.ejs') -%>
<%- include('../partials/navbar.ejs') -%>


<div class="container">
    <%- include('../partials/flashMessage.ejs') -%>
  
      <div class="row mt-4">
          <div class="col-md-3">
  
              
          </div>
  
          <div class="col-md-9">
  

            <form action="/shopAdmin/addProduct" method="post" enctype="multipart/form-data">
            <div class="form-group mt-4">

<div class="form-group mt-4">
    <label for="exampleFormControlInput1">Product Name</label>
    <input type="text" class="form-control" id="ProName"  name="ProName" placeholder="<%= product.title %>">
  </div>

  <div class="form-group mt-4">
    <label for="exampleFormControlInput1">Product Price</label>
    <input type="text" class="form-control" id="ProName"  name="ProName" placeholder="<%= product.price %> $">
  </div>

  <div class="form-group mt-4">
    <label for="exampleFormControlInput1">Product Available Stock</label>
    <input type="text" class="form-control" id="ProName"  name="ProName" placeholder="<%= product.available_stock %>">
  </div>


<div class="form-group">
    <label for="">Product Manufacturer</label>
    <select multiple class="form-control" id="ProManu" name="ProManu">
        <% if (product.manufacturer == "ASUS") {%>
      <option selected>ASUS</option>
      <% } else {%> 
        <option >ASUS</option>
        <% } %>

        <% if (product.manufacturer == "MSI") {%>
            <option selected>MSI</option>
            <% } else {%> 
                <option >MSI</option>
                <% } %>

                <% if (product.manufacturer == "RAZER") {%>
            <option selected>RAZER</option>
            <% } else {%> 
                <option >RAZER</option>
                <% } %>
    </select>

    
    <div class="mt-2 form-group" >
        <button type="submit" class="btn btn-primary">EDIT</button>
    </div>

  </div>
</form>
</div>
</div>
