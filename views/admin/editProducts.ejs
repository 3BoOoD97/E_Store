<%- include('../partials/header.ejs') -%>
<%- include('../partials/navbar.ejs') -%>


<table class="table table-hover table-dark mt-5 mr-5">
    <thead>
      <tr>
        <th scope="col">#ID</th>
        <th scope="col">Product Name</th>
        <th scope="col">Product Price</th>
        <th scope="col">Available Stock</th>
        <th scope="col">Manufacturer</th>
      </tr>
    </thead>
    <tbody>
        <% chunk.forEach((products)=>{%> 
      <tr>
        <% products.forEach((product)=>{%> 

        <th scope="row">1</th>
        <td><%= product.title %></td>
        <td><%= product.price %> $</td>

        <% if (product.available_stock > 10) {%>
        <td><%= product.available_stock %> <span class="dot_available"></span></td>
        
        <%} else if ((product.available_stock < 10) && (product.available_stock > 0)){%>
          <td><%= product.available_stock %> <span class="dot_almostUnavailable"></span></td>
          

        <% } else  {%>
          <td><%= product.available_stock %> <span class="dot_unavailable"></span></td>

          <%} %>
        <td><%= product.manufacturer %></td>
        <td> <a class="btn btn-primary" href="#" role="button">Edit</a> </td> 
      </tr>

    </tbody>
    <%})%>
    <%})%>
  </table>








